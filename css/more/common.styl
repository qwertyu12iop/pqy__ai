.container
    max-width 600px
    margin 0 auto
    padding 20px
    font-family Arial, sans-serif
    h1
        text-align center

    p
        line-height 1.6/*文字大小的1.6倍*/
    .more
        display inline-block
        background-color #3fcdd4
        color white
        text-decoration none
        position relative
        transition all .3s ease
        &::before
            content ""
            position absolute
            bottom 0
            left 0
            width 100%
            height 2px
            background-color red
            transform scaleX (0)/*水平方向上的缩放*/
            transform-origin bottom right/*缩放的原点*/
            transition transform 0.3s ease
        &:hover::before
            transform scaleX(1)
            transform-origin bottom left




    
